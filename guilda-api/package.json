{
  "name": "guilda-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "sync:schema": "cd src/infra/database/prisma/models && cat ../config/auto-generated-file-placeholder.txt ../config/config.prisma *.prisma > ../schema.prisma && npx prisma format",
    "post:sync:schema": "npx prisma generate",
    "premigrate": "npm run sync:schema",
    "migrate": "npx prisma migrate dev",
    "seed": "npx prisma db seed",
    "docker:migrate": "docker-compose exec guilda_api /bin/ash -c 'npm run migrate'",
    "docker:seed": "docker-compose exec guilda_api /bin/ash -c 'npm run seed'",
    "docker:sync:schema": "docker-compose exec guilda_api /bin/ash -c 'npm run seed'",
    "docker:create:migration": "docker-compose exec guilda_api /bin/ash -c 'npx prisma migrate dev --create-only'"
  },
  "dependencies": {
    "@azure/storage-blob": "^12.23.0",
    "@nestjs/axios": "^2.0.0",
    "@nestjs/cache-manager": "^1.0.0",
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/event-emitter": "^1.4.1",
    "@nestjs/jwt": "^10.0.3",
    "@nestjs/passport": "^9.0.3",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/schedule": "^3.0.1",
    "@nestjs/swagger": "^6.3.0",
    "@nestjs/terminus": "^9.2.2",
    "@prisma/client": "^4.13.0",
    "@types/date-fns": "^2.6.0",
    "@types/multer": "^1.4.7",
    "@types/workerpool": "^6.4.0",
    "axios": "^1.3.5",
    "bcrypt": "^5.1.0",
    "cache-manager": "^5.2.4",
    "calculy": "^4.0.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "crypto": "^1.0.1",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "helmet": "^7.1.0",
    "mime": "^3.0.0",
    "node-cache": "^5.1.2",
    "prettier-plugin-prisma": "^4.12.0",
    "prisma": "^4.13.0",
    "qrcode": "^1.5.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "uuid": "^9.0.0",
    "workerpool": "^6.4.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cron": "^2.0.1",
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/jest": "28.1.8",
    "@types/node": "^16.18.98",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "28.1.3",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.8",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "prisma": {
    "schema": "src/infra/database/prisma/schema.prisma",
    "seed": "ts-node src/infra/database/prisma/seeders/index.ts"
  }
}
